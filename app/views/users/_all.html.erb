<%content_for :users do%>
<h1>Usuarios</h1>

<table>
  <tr>
    <th>Correo</th>
    <th>Nombre</th>
    <th>Direccion</th>
    <th></th>
    <th></th>
  </tr>
 
<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.address %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', {:controller => 'users', :action => 'destroy' ,:id => user.id }, :confirm => 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

<br />
 
<%= link_to "Crear Usuario", new_admin_path, :remote=>true %>
<%end%>


