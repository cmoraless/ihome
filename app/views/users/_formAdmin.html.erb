<%= form_for(@user, :remote => true, :html => {:class => "form-horizontal"}) do |user_form| %>
 
 <fieldset>
 <% if user_form.error_messages.length > 0 %>
   	<%= user_form.error_messages :header_message => "Usuario inválido",
  :message=> "",
  :header_tag => :h3 %>  
 <%end%>
 	<% if @edit %>
			<legend>Editando Usuario Administrativo</legend>			
		<%else%>
			<legend>Nuevo Usuario Administrativo</legend>
		<%end%>
 
	<div class="control-group">
    <%= user_form.label :correo, :class => "control-label" %>
    <div class="controls">
    	<%= user_form.email_field :email, :class => "input-xlarge" %>
    </div>
  </div>
  <div class="control-group">
  	<%= user_form.label :contraseña, :class => "control-label" %>
  	<div class="controls">
  		<%= user_form.password_field :password, :class => "input-xlarge" %>
  	</div>
  </div>
  <div class="control-group">
  	<%= user_form.label :confirmación_contraseña, :class => "control-label" %>
  	<div class="controls">
  		<%= user_form.password_field :password_confirmation, :class => "input-xlarge" %>
  	</div>
  </div>
 	
 	<div class="control-group">
    <%= user_form.label :nombre, :class => "control-label" %>
    <div class="controls">
    	<%= user_form.text_field :name, :class => "input-xlarge" %>
    </div>
  </div>
 	
    <%= user_form.hidden_field :isAdmin, :value => true %>
  
    <%= user_form.hidden_field :isSuperAdmin, :value => false %>
 	
 	<div class="control-group">
    <%= user_form.label :Dirección, :class => "control-label" %>
    <div class="controls">
    	<%= user_form.text_field :address, :class => "input-xlarge" %>
    </div>
  </div>
 	
 	<div class="control-group">
    <%= user_form.label :Telefono, :class => "control-label" %>
    <div class="controls">
    	<%= user_form.text_field :phone, :class => "input-xlarge" %>
    </div>
  </div>
 	
 	<div class="control-group">
    <%= user_form.label :rut, :class => "control-label" %>
    <div class="controls">
    	<%= user_form.text_field :rut, :class => "input-xlarge" %>
    </div>
  </div>
  
  <div class="form-actions">
    <% if @edit %>
    	<%= user_form.submit :Actualizar, :class => "btn btn-primary" %>
    <%else%>
    	<%= user_form.submit :Crear, :class => "btn btn-primary" %>
    <%end%>
  </div>
</fieldset>
<% end %>
