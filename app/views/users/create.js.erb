$("#users").empty();
<% if flash[:message] =~ /usuario/i or flash[:notice] =~ /usuario/i%> <!-- si los mensajes estan relacionados con el usuario los muestro -->
$('#users').append('<%= j render "shared/flash_messages"%>');
<%end%>
<% if @user.isAdmin %>
	$("#users").append('<%= j render "homeadmin/indexUser" %>');
	$("#browseas").empty();
	$("#browseas").append('<%= j render "homeadmin/indexBrowseAs" %>');
	$("#iboxes").empty();
	$("#iboxes").append('<%= j render "homeadmin/indexIbox" %>');
<%else%>
	$("#users").append('<%= j render "users/all" %>');
	$("#users").append('<%= link_to "Agregar nuevo usuario", new_no_admin_path, :remote=>true, :class => "btn btn-primary"%>');	
<%end%>
