    <div id="error_explanation">
      <h2><%= pluralize(@camera.errors.count, "error") %> prohibited this camera from being saved:</h2>

      <ul>
      <% @camera.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
	<fieldset>
		<legend>Nueva Cámara Web</legend>
		
		<div class="control-group">
        	<%= f.label :nombre_cámara, :class => "control-label" %>
        	<div class="controls">
            	<%= f.text_field :name, :class => "input-xlarge" %>
            </div>
		</div>
		
		<div class="control-group">
        	<%= f.label :IP, :class => "control-label" %>
        	<div class="controls">
            	<%= f.text_field :ip, :class => "input-xlarge" %>
            </div>
		</div>
				
		<div class="control-group">
        	<%= f.label :Puerto, :class => "control-label" %>
        	<div class="controls">
            	<%= f.text_field :port, :class => "input-xlarge" %>
            </div>
		</div>

		<div class="control-group">
        	<%= f.label :Usuario, :class => "control-label" %>
        	<div class="controls">
            	<%= f.text_field :user, :class => "input-xlarge" %>
            </div>
		</div>
		
		<div class="control-group">
        	<%= f.label :Contraseña, :class => "control-label" %>
        	<div class="controls">
            	<%= f.password_field :password, :class => "input-xlarge" %>
            </div>
		</div>
		
		<div class="form-actions">
            <%= f.submit :Crear, :class => "btn btn-primary" %>
        </div>
		
<% end %>
