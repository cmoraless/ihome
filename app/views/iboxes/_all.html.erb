<h1>Iboxs para usuario <%= @user.email %></h1>

<table class="table table-striped">
	
  <tr>
 		<th>Id</th>
    <th>Nombre</th>
    <th>IP</th>
    <th>Puerto</th>    
    <th>Acciones</th>
  </tr>

<% @iboxes.each do |ibox| %>
  <tr>
  	<td><%= ibox.id %></td>
  	<td><%= ibox.name %></td>
    <td><%= ibox.ip %></td>
    <td><%= ibox.port %></td>    
    <td><%= link_to 'Editar', edit_ibox_path(ibox), :class => 'btn btn-mini', :remote => true %>
    <%= link_to 'Eliminar', ibox, method: :delete, :remote => true, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>

</table>





