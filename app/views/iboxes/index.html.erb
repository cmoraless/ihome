    <th></th>
  </tr>

<% @iboxes.each do |ibox| %>
  <tr>
  	<td><%= ibox.id %></td>
  	<td><%= ibox.name %></td>
    <td><%= ibox.ip %></td>
    <td><%= ibox.port %></td>
