<% content_for :ibox do%>
<h1>Listing iboxes</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Nombre</th>
    <th>IP</th>
    <th>Puerto</th>
    <th>Activo</th>
    <th></th>
