	<script type="text/javascript" charset="UTF-8">		
	
	function crearI(){
		$('#division').empty();
		$('#division').append('<%= link_to "Crear Ibox", new_ibox_path, :remote => true, :class => "btn btn-primary" %>');
	}
	
	function buscarI(){
		$('#division').empty();
		$('#division').append('<%= j render "homeadmin/searchIboxForm"%>');
	}
	
	function listarI(){
		$('#division').empty();
		$('#division').append('<%= j render "iboxes/allInactives"%>');
	}
</script>
